<%= render :template => 'dashboard/index' -%>
<p style="color: green"><%= notice %></p>

<h1>Notes</h1>
<h1>List of Notes</h1>

<%= render :template => 'notes/search_menu' -%>
<table class="table table-striped table-bordered">
  <thead class="thead-dark">
  <thead>
    <tr>
      <th scope="col">Title</th>
      <th scope="col">Topic</th>
      <th scope="col">Description</th>
      <th scope="col">Image</th>
    </tr>
  </thead>
  <tbody>
     <% @notes.each do |note| %>
      <% if note.share_id == current_user.id %>
      <tr>
        <td><%= note.title %></td>
        <td><%= note.topic %></td>
        <td><%= note.description %></td>
        <td><% if note.image? %>
            <div class="gallery">
            <%= image_tag url_for(note.image.url) %>
            </div>
            </td>
          <% end %>
      </tr>
        <% end %>
    <% end %>
  </tbody>
</table>

<%= render :template => 'notes/back' -%>

<%= link_to "Log out", destroy_user_session_path, class: 'nav-link', data: {turbo_method: :delete} %>