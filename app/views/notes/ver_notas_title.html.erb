<%= render :template => 'dashboard/index' -%>
<table class="table table-striped table-bordered">
  <thead class="thead-dark">
  <thead>
    <tr>
    <th scope="col">Owner</th>
      <th scope="col">Title</th>
      <th scope="col">TOpic</th>
      <th scope="col">Description</th>
      <th scope="col">Image</th>
      <th scope="col">Share_person</th>

      <th scope="col">Share</th>
    </tr>
  </thead>
  <tbody>
      <% @notes.each do |note| %>
        <td><%= note.user_id %></td>
        <td><%= note.title %></td>
        <td><%= note.topic %></td>
        <td><%= note.description %></td>
        <td><%= note.share_id %></td>
        <td>
          <% if note.image? %>
            <div class="gallery">
            <%= image_tag url_for(note.image.url) %>
            </div>
          <% end %>
        </td>
        <td><%= note.image %></td>
        <td><%= link_to "Edit this note",  edit_note_path(note) %>  </td>
        <td><%= link_to "Show this note", note %>  </td>
        <td><%= link_to "remove", note, :method => :delete, turbo_confirm: "Are you sure?"  %>
     </td>
      </tr>
    <% end %>
  </tbody>
</table>