<%= render :template => 'dashboard/index' -%>
<p style="color: green"><%= notice %></p>

<h1>Collections</h1>


 <% if current_user.admin? %>
 <h1>List of collections</h1>
<table class="table table-striped table-bordered">
  <thead class="thead-dark">
  <thead>
    <tr>
    <th scope="col">Owner</th>
      <th scope="col">Title</th>
      <th scope="col">Topic</th>
      <th scope="col">Edit</th>
    </tr>
  </thead>
  <tbody>
      <% @collections.each do |collection| %>
        <td><%= collection.user_id%></td>
        <td><%= collection.title %></td>
        <td><%= collection.topic %></td>
        <td><%= link_to "Edit this collection",  edit_collection_path(collection) %>  </td>
        <td><%= link_to "remove", collection, :method => :delete, turbo_confirm: "Are you sure?"  %></td>
      </tr>
    <% end %>
  </tbody>
</table>
 
<% else %>     

<table class="table table-striped table-bordered">
  <thead class="thead-dark">
  <thead>
    <tr>
       <th scope="col">Owner</th>
      <th scope="col">Title</th>
      <th scope="col">Topic</th>
      <th scope="col">Edit</th>
    </tr>
  </thead>
  <tbody>
     <% @collections.each do |collection| %>
    
      <tr>
      <% current_user.id== collection.user_id%>
        <td><%= collection.user_id%></td>
        <td><%= collection.title %></td>
        <td><%= collection.topic %></td>
        <td><%= link_to "Edit this collection",  edit_collection_path(collection) %>  </td>
       
          <td><%= link_to "remove", collection, :method => :delete, turbo_confirm: "Are you sure?"  %></td>
     </td>
      </tr>  
<% end %>

  </tbody>
</table>
<% end %>

<%= link_to "New collection", new_collection_path %>
<%= render :template => 'collections/back' -%>  
