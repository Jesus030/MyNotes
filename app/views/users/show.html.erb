<h1>Your Friend choose to take</h1>


<h2>Your Friends</h2>
<ul>
  <% for user in @user.friends %>
  <li><%= h user.username %></li>
  <% end %>  
</ul>


<h2>Your Friends, choose what you want to delete</h2>
<ul>
  <% for friendship in @user.friendships %>
  <li>
    <%= h friendship.friend.username %>
    (<%= link_to "remove", friendship, :method => :delete %>)
  </li>
  <% end %>  
</ul>



<%= form_tag add_friend_path, method: :get do%>
<%= text_field_tag :search, nil, placeholder: "Look friends"%>
<%= submit_tag "Look"%>
<% end %>

<%= form_for @friendships do |f| %>
<%= f.hidden_field :friend_id, value: @friend.id%>
<%= f.submit "Look"%>
<% end %>

<div>
  <%= link_to "Edit this user", edit_user_path(@user) %> |
  <%= link_to "Back to users", users_path %>

  <%= button_to "Destroy this user", @user, method: :delete %>
</div>


