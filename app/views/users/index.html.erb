<%= render :template => 'dashboard/index' -%>
<h1> Welcome to User page <%  current_user.Username%></h1>
<% if current_user.admin?%> 
<h1>List of Users</h1>
<table class="table table-striped table-bordered">
  <thead class="thead-dark">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Zip</th>
      <th scope="col">Role</th>
      <th scope="col">Friends</th>
      <th scope="col">Option</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.Username %></td>
        <td><%= user.email %></td>
        <td><%= user.zip %></td>
        <td><%= user.role %></td>
        <td><%= link_to "List friends", friendships_path(@user) %><td>
        <td><%= link_to "Edit this user", edit_user_path(user) %> | </td>
        <td><%= link_to "remove", user, :method => :delete, turbo_confirm: "Are you sure?"  %>
     </td>
      </tr>
    <% end %>
  </tbody>
</table>


<%= link_to "New user", new_user_path %>
<% else %>
<h1> Welcome  <%  current_user.Username%></h1>
   <% @users.each do |user| %>
    <% if current_user == user%>
      <%= render user %>
      <%= link_to "Edits user", edit_user_path(user) %>
      <%= link_to "List friends", friendships_path(@user) %>
    <% end %>
  <% end %>
<% end %>